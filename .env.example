# Environment Variables Template for Customer Portal

# Copy this file to .env.local for development
# Set these as environment variables in Cloudflare Pages for production

# ================================
# CLOUDFLARE ACCESS CONFIGURATION
# ================================

# Your Cloudflare Account ID (found in dashboard sidebar)
VITE_CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Cloudflare Access Application Audience (AUD) tag
# Found in Zero Trust > Access > Applications > Your App > Overview
VITE_CLOUDFLARE_ACCESS_APPLICATION_AUD=your_application_aud_here

# Your main domain for Cloudflare Access
VITE_DOMAIN=mustardtreegroup.com

# ================================
# CLOUDFLARE R2 CONFIGURATION
# ================================

# R2 Bucket name for document storage
VITE_R2_BUCKET_NAME=mustardtree-documents

# R2 API credentials (create R2 token in Cloudflare dashboard)
# Go to My Profile > API Tokens > Create Token > R2 Token
VITE_R2_ACCESS_KEY_ID=your_r2_access_key_id
VITE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# R2 endpoint (auto-generated based on account ID)
# Format: https://{ACCOUNT_ID}.r2.cloudflarestorage.com
VITE_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# ================================
# APPLICATION CONFIGURATION
# ================================

# Application environment
NODE_ENV=production

# Maximum file upload size (in bytes)
# Default: 100MB = 104857600 bytes
VITE_MAX_FILE_SIZE=104857600

# Supported file types (comma-separated MIME types)
VITE_ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Document retention period (in days)
VITE_DOCUMENT_RETENTION_DAYS=2555  # 7 years

# ================================
# SECURITY CONFIGURATION
# ================================

# Enable audit logging
VITE_ENABLE_AUDIT_LOGGING=true

# Enable file encryption at rest
VITE_ENABLE_ENCRYPTION=true

# Session timeout (in minutes)
VITE_SESSION_TIMEOUT=480  # 8 hours

# ================================
# DEVELOPMENT CONFIGURATION
# ================================

# Enable mock authentication for development
VITE_ENABLE_MOCK_AUTH=false

# Enable debug logging
VITE_DEBUG_MODE=false

# Mock customer data for development
VITE_ENABLE_MOCK_DATA=false

# ================================
# OPTIONAL INTEGRATIONS
# ================================

# Future API backend URL
VITE_API_BASE_URL=https://api.mustardtreegroup.com

# Analytics tracking ID (if using)
VITE_ANALYTICS_ID=

# Error reporting service (if using)
VITE_ERROR_REPORTING_DSN=

# ================================
# CLOUDFLARE PAGES DEPLOYMENT
# ================================

# These are set automatically in Cloudflare Pages
# CF_PAGES=1
# CF_PAGES_COMMIT_SHA=
# CF_PAGES_BRANCH=
# CF_PAGES_URL=